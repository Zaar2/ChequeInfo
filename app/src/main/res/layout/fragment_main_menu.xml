<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragment.mainMenu.MainMenuFragment">

    <LinearLayout
        android:id="@+id/groupBtn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnMain_goods"
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goods_lblBtn" />

        <Button
            android:id="@+id/btnMain_sellers"
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sellers_lblBtn" />

        <Button
            android:id="@+id/btnMain_cheques"
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cheques_lblBtn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutGroupMain_descTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupBtn_main">

        <TextView
            style="@style/textView_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_upload_cheques" />

        <!--    here_place_for_layout_for_link_to_app    -->
        <TextView
            style="@style/textView_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/here_place_for_layout_for_link_to_app" />

    </LinearLayout>

    <Button
        android:id="@+id/btnMain_information"
        style="@style/button_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetBottom="0dp"
        android:text="@string/information_lblBtn"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>